# ======================================
# FastAPI App Settings
# ======================================
APP_NAME="LLM Stock Analyst Platform"
APP_ENV="development"
APP_HOST="0.0.0.0"
APP_PORT=8000

# ======================================
# LLM Provider Keys
# ======================================

# --- OpenAI ---
OPENAI_API_KEY="YOUR-KEY-HERE"
OPENAI_API_BASE=""            # Optional: custom base (e.g., proxies)

# --- DeepSeek 
DEEPSEEK_API_KEY="YOUR-KEY-HERE"
DEEPSEEK_API_BASE="https://api.deepseek.com"   

# --- Grok (xAI) ---
# xAI (Grok) docs recommend XAI_API_KEY environment variable name
XAI_API_KEY="YOUR-KEY-HERE"
XAI_API_BASE=""               # Optional (if you have a custom domain for xai)

# --- Gemini (Google) ---
GOOGLE_API_KEY="YOUR-KEY-HERE"
GEMINI_MODEL="gemini-2.0-flash"

# --- Anthropic (Claude) ---
ANTHROPIC_API_KEY="YOUR-KEY-HERE"
ANTHROPIC_MODEL="claude-3.1"

# ======================================
# Local LLM (llama.cpp)
# ======================================
LOCAL_MODEL_PATH="./models/llm.gguf"
LOCAL_MODEL_N_CTX=4096
LOCAL_MODEL_TEMPERATURE=0.2

# ======================================
# Financial Data Sources
# ======================================
YFINANCE_CACHE="True"
DEFAULT_HISTORY_DAYS=30

# ======================================
# CrewAI Configuration (if used)
# ======================================
CREW_VERBOSE="True"
CREW_MAX_TOKENS=4096

# ======================================
# Logging
# ======================================
LOG_LEVEL="INFO"
LOG_FILE="./logs/app.log"
